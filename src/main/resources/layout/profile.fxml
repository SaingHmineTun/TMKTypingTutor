<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.saimao.tmk_typing_tutor.ProfileController">
    <children>
        <VBox layoutX="50.0" layoutY="30.0" spacing="25.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="30.0">
            <children>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="btnChangePasswordTop" mnemonicParsing="false" onAction="#showChangePasswordDialog" prefHeight="35.0" prefWidth="150.0" text="Change Password" />
                    </children>
                </HBox>
                <Label text="User Profile" VBox.vgrow="NEVER">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <TableView fx:id="tvProgress" prefHeight="300.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="tcLevel" prefWidth="200.0" text="Level">
                        </TableColumn>
                        <TableColumn fx:id="tcProgress" prefWidth="200.0" text="Progress">
                        </TableColumn>
                        <TableColumn fx:id="tcCertificate" prefWidth="150.0" text="Certificate">
                        </TableColumn>
                        <TableColumn fx:id="tcDetails" prefWidth="150.0" text="Details">
                        </TableColumn>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="btnClose" mnemonicParsing="false" onAction="#close" prefHeight="35.0" prefWidth="100.0" text="Close" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>