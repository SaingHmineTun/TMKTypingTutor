<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f0f0f0;" stylesheets="@../css/light_theme.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.saimao.tmk_typing_tutor.CertificateController">
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <children>
                <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/app_icon.png" />
                    </image>
                </ImageView>
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Certificate of Completion" />
                <Label text="This is to certify that" />
                <Label fx:id="lblUsername" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #007bff;" text="[Username]" />
                <Label text="has successfully completed" />
                <Label fx:id="lblLevel" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="[Level Name]" />
                <Label text="in TMK Typing Tutor" />
            </children>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" prefHeight="80.0">
            <children>
                <Button fx:id="btnClose" mnemonicParsing="false" onAction="#close" text="Close" />
            </children>
        </VBox>
    </bottom>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
