<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.saimao.tmk_typing_tutor.auth.RegisterController">
   <children>
      <Label layoutX="239.0" layoutY="49.0" text="TMK Typing Tutor">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="tfUsername" layoutX="226.0" layoutY="134.0" promptText="Username" />
      <PasswordField fx:id="pfPassword" layoutX="226.0" layoutY="188.0" promptText="Password" />
      <Button fx:id="btnRegister" layoutX="265.0" layoutY="298.0" mnemonicParsing="false" onAction="#register" text="Register" />
      <Label fx:id="lbError" layoutX="239.0" layoutY="103.0" text="Label" textFill="RED" visible="false" />
      <PasswordField fx:id="pfConfirmPassword" layoutX="226.0" layoutY="242.0" promptText="Confirm Password" />
      <Button fx:id="btnLogin" layoutX="274.0" layoutY="340.0" mnemonicParsing="false" onAction="#showLogin" text="Back to Login" />
   </children>
</AnchorPane>
