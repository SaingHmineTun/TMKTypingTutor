<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/list_styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.saimao.tmk_typing_tutor.LessonProgressController">
    <children>
        <VBox layoutX="50.0" layoutY="30.0" spacing="25.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="30.0">
            <children>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="btnClose" mnemonicParsing="false" onAction="#close" prefHeight="35.0" prefWidth="100.0" text="Close" />
                    </children>
                </HBox>
                <Label text="Lesson Progress" VBox.vgrow="NEVER">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <Label fx:id="lblLevel" text="Level: ">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <TableView fx:id="tvLessonProgress" prefHeight="300.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="tcLesson" prefWidth="150.0" text="Lesson" />
                        <TableColumn fx:id="tcWPM" prefWidth="100.0" text="WPM" />
                        <TableColumn fx:id="tcAccuracy" prefWidth="100.0" text="Accuracy" />
                        <TableColumn fx:id="tcMistakes" prefWidth="100.0" text="Mistakes" />
                        <TableColumn fx:id="tcAction" prefWidth="150.0" text="Action" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>